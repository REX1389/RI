<Page x:Class="Gogogo.Pages.Menu2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gogogo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1150"
      Title="Menu2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="0" Margin="50" FontSize="30" Click="ButtonHH">Human vs Human</Button>
        <Button Grid.Column="1" Grid.Row="1" Margin="50" FontSize="30" Click="ButtonHA">Human vs AI</Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="50" FontSize="30" Click="ButtonAH">AI vs Human</Button>
        <Button Grid.Column="1" Grid.Row="3" Margin="50" FontSize="30" Click="ButtonAA">AI vs AI</Button>
    </Grid>
</Page>
